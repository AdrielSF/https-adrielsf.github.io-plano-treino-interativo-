        const workoutDisplay = document.getElementById('workout-display');
        const navButtons = document.querySelectorAll('.nav-button');

        function displayWorkout(day) {
            const data = workoutData[day];
            let exercisesHtml = data.exercises.map(exercise => `
                <div class="bg-slate-50 p-4 rounded-lg border border-slate-200 flex justify-between items-center">
                    <p class="font-medium text-slate-700">${exercise.name}</p>
                    <p class="font-bold text-blue-800 text-sm whitespace-nowrap pl-4">${exercise.reps}</p>
                </div>
            `).join('');

            workoutDisplay.innerHTML = `
                <div class="mb-6">
                    <h2 class="text-3xl font-bold text-blue-900 flex items-center"><span class="text-4xl mr-3">${data.icon}</span>${data.title}</h2>
                </div>
                <div class="space-y-4">
                    ${exercisesHtml}
                </div>
            `;

            navButtons.forEach(button => {
                button.classList.remove('active');
                if (button.dataset.day === day) {
                    button.classList.add('active');
                }
            });
        }

        navButtons.forEach(button => {
            button.addEventListener('click', () => {
                const day = button.dataset.day;
                displayWorkout(day);
            });
        });
        
        document.addEventListener('DOMContentLoaded', () => {
